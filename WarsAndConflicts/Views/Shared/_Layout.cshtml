@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Войны и конфликты</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            color: #212529;
        }

        .navbar-custom {
            background: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            color: #007bff !important;
        }

        .btn-custom {
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
        }

            .btn-custom:hover {
                transform: translateY(-2px);
            }

        .search-container {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            width: 300px;
        }

        .main-container {
            max-width: 75%;
            margin: 40px auto;
            padding: 20px;
            border-radius: 10px;
        }

        .nav-content {
            position: relative;
            width: 100%;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
        <div class="container nav-content">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Главная</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="search-container">
                <form class="d-flex" role="search" action="@Url.Action("Search", "Home")">
                    <input class="form-control me-2" type="search" name="query" placeholder="Поиск..." required aria-label="Поиск">
                    <button class="btn btn-outline-secondary btn-custom" type="submit">Найти</button>
                </form>
            </div>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div class="d-flex align-items-center gap-2 flex-wrap">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success btn-custom" href="@Url.Action("CreatePeriod", "Period")">Создать период</a>
                        <a class="btn btn-outline-success btn-custom" href="@Url.Action("CreateWar", "War")">Создать войну</a>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-outline-danger btn-custom" href="@Url.Action("Quit", "Account")">Выход</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary btn-custom" href="@Url.Action("SignIn", "Account")">Вход</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="main-container">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>