@model ICollection<WarsAndConflicts.DataAccess.Entities.PeriodEntity>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h1>Периоды войн и конфликтов</h1>
    <div class="container mt-5">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var period in Model)
            {
                <div class="col">
                    <a href="@Url.Action("GetPeriod", "Period", new { id = period.Id })" class="text-decoration-none">
                        <div class="card">
                            @if (period.Image != null)
                            {
                                var base64Image = Convert.ToBase64String(period.Image);
                                <img src="data:image/jpeg;base64,@base64Image" class="card-img-top" alt="Изображение периода">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Изображение периода">
                            }
                            <div class="card-body">
                                <h5 class="card-title text-truncate" title="@period.Title">@period.Title</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
